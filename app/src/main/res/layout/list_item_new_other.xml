<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector"
    android:paddingLeft="@dimen/list_item_extra_padding"
    android:paddingRight="@dimen/list_item_extra_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
        android:paddingRight="@dimen/abc_list_item_padding_horizontal_material">

        <ImageView
            android:id="@+id/iv_list_item_image"
            android:layout_width="@dimen/list_iv_item_image_width"
            android:layout_height="@dimen/list_iv_item_image_height"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/list_tv_item_image_margin"
            android:layout_marginRight="@dimen/list_tv_item_image_margin"
            android:layout_marginTop="@dimen/list_tv_item_image_margin"
            android:layout_marginBottom="@dimen/list_tv_item_image_margin"
            android:scaleType="centerCrop"
            android:transitionName="@string/detail_image_transition_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/list_tv_item_title_margin_top"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                tools:text="titletitletitletitletitletitletitleti"/>

            <include layout="@layout/include_list_item_new_other_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_include_list_item_new_other_info_height"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>