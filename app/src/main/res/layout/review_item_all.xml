<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
    android:paddingRight="@dimen/abc_list_item_padding_horizontal_material">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_review_item_image"
        android:layout_width="@dimen/review_civ_item_image_width"
        android:layout_height="@dimen/review_civ_item_image_height"
        android:layout_marginTop="@dimen/review_civ_item_image_margin_top"
        app:civ_border_color="@color/review_civ_item_image_border"
        app:civ_border_width="@dimen/review_civ_item_image_border_width" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/review_linearlayout_item_margin_top"
        android:layout_marginLeft="@dimen/review_linearlayout_item_margin_start"
        android:layout_marginStart="@dimen/review_linearlayout_item_margin_start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_review_item_author"
                tools:text="author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/review_tv_item_author_text_size"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_review_item_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/review_tv_item_number_height"
                tools:text="number"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_review_item_date"
                tools:text="date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/review_tv_item_date_text_size" />

            <TextView
                android:id="@+id/tv_review_item_site"
                tools:text="site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/review_tv_item_site_margin_start"
                android:layout_marginStart="@dimen/review_tv_item_site_margin_start"
                android:textSize="@dimen/review_tv_item_site_text_size"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_review_item_content"
            tools:text="contentcontentcontentcontentcontentcontentcontentcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/review_tv_item_content_padding_top"
            android:paddingBottom="@dimen/review_tv_item_content_padding_bottom"
            android:textSize="@dimen/review_tv_item_content_text_size" />
    </LinearLayout>

</LinearLayout>